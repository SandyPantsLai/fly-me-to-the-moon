<form action="/songs" method="post">
  <!-- input types: text / date / time / email / tel / number / search -->
  <div class="field">
    <label for="song_name">Song Name</label>
    <input id="song_name" type="text" name="song_name" placeholder="Come Fly With Me">
  </div>

  <div class="field">
    <label for="artist">Artist</label>
    <input id="artist" type="text" name="artist" placeholder="Frank Sinatra">
  </div>

  <fieldset>
    <legend>Mood(s)</legend>
    <label>
      <input type="checkbox" name="mood[]" value="Upbeat">
      <span>Upbeat</span>
    </label>
    <label>
      <input type="checkbox" name="mood[]" value="Soothing">
      <span>Soothing</span>
    </label>
    <label>
      <input type="checkbox" name="mood[]" value="Lounge">
      <span>Lounge</span>
    </label>
    <label>
      <input type="checkbox" name="mood[]" value="Cocktail Hour">
      <span>Cocktail Hour</span>
    </label>
    <label>
      <input type="checkbox" name="mood[]" value="Romantic">
      <span>Romantic</span>
    </label>
  </fieldset>

  <div class="field">
    <label for="youtube-link">YouTube Link</label>
    <input id="youtube-link" type="text" name="link" placeholder="https://www.youtube.com/watch?v=Euci0_BBmNE">
  </div>

  <input type="submit" value="Request Song">
</form>